<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Crag Name at the Top Left -->
    <TextView
        android:id="@+id/textViewCragName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Crag Name"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <!-- Route Name at the Bottom Left -->
        <TextView
            android:id="@+id/textViewRouteName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Route Name"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <!-- Grade of the Route -->
        <TextView
            android:id="@+id/textViewGrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="6a"
            android:textSize="20dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <!-- Type of Climbing -->
        <TextView
            android:id="@+id/textViewClimbingType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Sport"
            android:textSize="20dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>
</LinearLayout>
